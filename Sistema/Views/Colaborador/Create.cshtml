@model Sistema.Models.ColaboradorModel
@{
    ViewData["Title"] = "Registrar Colaborador";
}
<nav class="navbar navbar-expand-lg fixed-top shadow-sm">
    <div class="container-fluid px-4">
        <a class="navbar-brand" href="#">
            <img src="/css/Img/logo.png" alt="Logo PCLATEZ" />
            PCLATEZ | Control de Asistencia
        </a>
        <div class="d-flex">
            <a href="/Home/Index" class="nav-link me-3">
                <i class="fa-solid fa-house"></i> Inicio
            </a>
            <a href="/Account/Logout" class="btn btn-outline-light btn-sm">
                <i class="fa-solid fa-right-from-bracket"></i> Cerrar sesión
            </a>
        </div>
    </div>
</nav>
<div class="container mt-5 mb-5">

    <!-- Encabezado general -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-success">Registrar Nuevo Colaborador</h1>
        <p class="text-muted">Completa los datos del colaborador para añadirlo al sistema PCLATEZ</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-10">

            <!-- Tarjeta -->
            <div class="card shadow border-0 rounded-4 overflow-hidden">
                <!-- Encabezado -->
                <div class="card-header bg-gradient text-white text-center py-4"
                     style="background: linear-gradient(90deg, #198754, #28a745);">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa-solid fa-user-plus me-2"></i>Nuevo Registro
                    </h3>
                </div>

                <!-- Cuerpo -->
                <div class="card-body bg-white p-4">
                    <form asp-controller="Colaborador" asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="num_empleado" class="form-label fw-semibold text-secondary">
                                <i class="fa-solid fa-id-card me-1 text-success"></i> Número de empleado
                            </label>
                            <input asp-for="num_empleado" class="form-control rounded-3 shadow-sm" placeholder="Ejemplo: 1023" />
                            <span asp-validation-for="num_empleado" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="nombre" class="form-label fw-semibold text-secondary">
                                <i class="fa-solid fa-user me-1 text-success"></i> Nombre
                            </label>
                            <input asp-for="nombre" class="form-control rounded-3 shadow-sm" placeholder="Nombre del colaborador" />
                            <span asp-validation-for="nombre" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="apellido" class="form-label fw-semibold text-secondary">
                                <i class="fa-solid fa-user-tag me-1 text-success"></i> Apellido
                            </label>
                            <input asp-for="apellido" class="form-control rounded-3 shadow-sm" placeholder="Apellido del colaborador" />
                            <span asp-validation-for="apellido" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="area" class="form-label fw-semibold text-secondary">
                                <i class="fa-solid fa-building me-1 text-success"></i> Área
                            </label>
                            <input asp-for="area" class="form-control rounded-3 shadow-sm" placeholder="Área de trabajo" />
                            <span asp-validation-for="area" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                                <i class="fa-solid fa-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-success px-4 rounded-pill shadow-sm">
                                <i class="fa-solid fa-check"></i> Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- Estilos -->
<style>
    body {
        background: linear-gradient(135deg, #f5fff5, #e9f7ef);
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
        }

    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 6px rgba(40, 167, 69, 0.4);
    }

    .btn-success {
        background: linear-gradient(90deg, #198754, #28a745);
        border: none;
    }

        .btn-success:hover {
            background: linear-gradient(90deg, #157347, #1e9b59);
        }
</style>

