@model IEnumerable<Sistema.Models.ColaboradorModel>

@{
    ViewData["Title"] = "Colaboradores";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - PCLATEZ</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: "Segoe UI", sans-serif;
        }

        .navbar {
            background-color: #1E5631;
        }

        .navbar-brand {
            font-weight: 600;
            color: white !important;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .navbar img {
            height: 35px;
        }

        .nav-link {
            color: white !important;
        }

        .container-main {
            margin-top: 90px;
        }

        .card {
            border: none;
            border-radius: 18px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.08);
            overflow: hidden;
        }

        .table thead {
            background-color: #1E5631;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #ecfbee;
            transition: all 0.2s ease-in-out;
        }

        .btn-success, .btn-outline-success {
            transition: all 0.3s ease-in-out;
        }

            .btn-success:hover {
                background-color: #157347;
                transform: scale(1.05);
            }

            .btn-outline-success:hover {
                background-color: #1E5631;
                color: white;
            }

        .search-section {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        }

        footer {
            margin-top: 70px;
            background: #1E5631;
            color: white;
            padding: 15px 0;
            text-align: center;
        }
    </style>
</head>

<body>
    <!-- 🔹 Barra superior -->
    <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="#">
                <img src="/css/Img/logo.png" alt="Logo PCLATEZ" />
                PCLATEZ | Gestión de Colaboradores
            </a>
            <div class="d-flex">
                <a href="/Home/Index" class="nav-link me-3">
                    <i class="fa-solid fa-house"></i> Inicio
                </a>
                <a href="/Account/Logout" class="btn btn-outline-light btn-sm">
                    <i class="fa-solid fa-right-from-bracket"></i> Cerrar sesión
                </a>
            </div>
        </div>
    </nav>

    <!-- 🔹 Contenido principal -->
    <div class="container container-main">
        <div class="text-center mb-5">
            <h1 class="fw-bold text-success">Gestión de Colaboradores</h1>
            <p class="text-muted">Administra, consulta y edita la información de tu personal de forma sencilla.</p>
        </div>

        <!-- Barra de búsqueda -->
        <div class="search-section mb-4">
            <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                <form asp-action="Index" method="get" class="d-flex flex-wrap gap-2">
                    <input type="text" class="form-control" name="q" value="@Context.Request.Query["q"]" placeholder="🔍 Buscar colaborador..." style="min-width: 250px;">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-magnifying-glass"></i> Buscar
                    </button>
                </form>

                <div class="d-flex gap-2 mt-2 mt-md-0">
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fa-solid fa-user-plus"></i> Nuevo
                    </a>
                </div>
            </div>
        </div>

        <!-- Tabla de colaboradores -->
        <div class="card">
            <div class="card-header bg-success text-white py-3 fw-semibold">
                <i class="fa-solid fa-users"></i> Lista de Colaboradores
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead>
                        <tr>
                            <th># Empleado</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Área</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.num_empleado</td>
                                    <td>@item.nombre</td>
                                    <td>@item.apellido</td>
                                    <td>@item.area</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.num_empleado" class="btn btn-outline-success btn-sm me-2">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.num_empleado" class="btn btn-outline-danger btn-sm">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-muted py-4">
                                    <i class="fa-solid fa-circle-exclamation"></i> No hay colaboradores registrados
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 🔹 Footer -->
    <footer>
        <small>&copy; 2025 PCLATEZ | Sistema de Control de Asistencia</small>
    </footer>

    <!-- JS Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
