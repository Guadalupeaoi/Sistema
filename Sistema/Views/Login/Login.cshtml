@model LoginViewModel

<div class="container vh-100 d-flex justify-content-center align-items-center"
     style="background: linear-gradient(to right, #f3fff3, #e9f7ef);">

    <div class="card shadow-lg rounded-4 p-4" style="max-width: 400px; width: 100%;">
        <div class="card-header text-center bg-success text-white rounded-top-4 py-3">
            <h3 class="mb-0"><i class="fa-solid fa-right-to-bracket"></i> Iniciar Sesión</h3>
        </div>

        <div class="card-body">
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <!-- Usuario -->
                <div class="mb-3">
                    <label asp-for="Usuario" class="form-label fw-semibold">
                        <i class="fa-solid fa-user"></i> Usuario
                    </label>
                    <input asp-for="Usuario" class="form-control shadow-sm" placeholder="Ingrese su usuario" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>

                <!-- Contraseña -->
                <div class="mb-3">
                    <label asp-for="Contrasena" class="form-label fw-semibold">
                        <i class="fa-solid fa-lock"></i> Contraseña
                    </label>
                    <input asp-for="Contrasena" type="password" class="form-control shadow-sm" placeholder="Ingrese su contraseña" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100 shadow-sm">
                    <i class="fa-solid fa-right-to-bracket"></i> Ingresar
                </button>
            </form>
        </div>

        <div class="card-footer text-center text-muted">
            &copy; 2025 PCLATEZ
        </div>
    </div>
</div>

<!-- Font Awesome para íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 6px rgba(25, 135, 84, 0.4);
    }
</style>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}

